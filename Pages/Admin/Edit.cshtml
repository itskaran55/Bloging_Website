<script src="css/InsightAdmin/assets/vendor/simple-datatables/simple-datatables.js"></script>
<script src="css/InsightAdmin/assets/vendor/tinymce/tinymce.min.js"></script>
<script src="css/InsightAdmin/assets/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="css/InsightAdmin/assets/js/main.js"></script>
</html>