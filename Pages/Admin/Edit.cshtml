@page "{id:int}"
@model BlogApp.Pages.Admin.EditModel
@{
    ViewData["Title"] = "Admin - Edit Users";
    Layout = "_Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Admin/editData.css">
   @*  <link href="css/InsightAdmin/assets/img/favicon.png" rel="icon">
    <link href="css/InsightAdmin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="css/InsightAdmin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/InsightAdmin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="css/InsightAdmin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="css/InsightAdmin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="css/InsightAdmin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="css/InsightAdmin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="css/InsightAdmin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="css/InsightAdmin/assets/css/style.css" rel="stylesheet"> *@
</head>
<body>
    <div class='formContainer'>
        <form method="post">
            <h3>Edit Users</h3>
            <div class='inputs'>
                <div class='userid'>
                    <input type='hidden' name="userid" value="@Model.User.userid" />
                </div>
                <div class='username'>
                    Username : <input type='text' name="username" placeholder='Enter Username' value="@Model.User.username" />
                </div>
                <div class='email'>
                    Email : <input type='email' name="email" placeholder='Enter Email' value="@Model.User.email" />
                </div>
                <div class='password'>
                    Password : <input type='password' name="password" placeholder='Enter Password' value="@Model.User.password" />
                </div>
                <div class='isActive'>
                    <select name="isActive">
                        @* <option value="true" selected="@Model.User.isActive">Active</option>
                        <option value="false" selected="@(Model.User.isActive == false)">Inactive</option> *@
                        <option>Select</option>
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                </div>
                <div class='username'>
                    Role : <input type='text' name="Role" placeholder='Enter Username' value="@Model.User.Role" />
                </div>
            </div>
            <div class='btn'>
                <button type="submit">Update</button>
            </div>
        </form>
    </div>
</body>
<script src="css/InsightAdmin/assets/vendor/apexcharts/apexcharts.min.js"></script>
<script src="css/InsightAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
