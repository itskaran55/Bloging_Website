@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Bloscot</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" type="text/css" href="/css/template/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="/css/template/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="/css/template/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="/css/template/images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="/css/template/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="/css/template/https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="/css/template/css/owl.carousel.min.css">
    <link rel="stylesoeet" href="/css/template/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/template/https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"> *@
</head>
<body>
    <!-- header section start -->
    <div class="header_section">
        <div class="container-fluid header_main">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="logo" href="/Users/Index"><img src="/css/template/images/logo.png"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Blog">Latest Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Create">New Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/MyBlogs">My Blogs</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetString("IsUserLoggedIn") == "true")
                        {
                            <li>
                                <form method="post" asp-page="/Users/Login" asp-page-handler="Logout">
                                    <button type="submit" style="background-color: transparent; margin-top: 7px; color: white; margin-left: 12px; font-size: 1.3em;">LOGOUT</button>
                                </form>
                            </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Registration">Registration</a>
                        </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <!-- banner section end -->
    <div>
        @RenderBody()
    </div>
    <!-- footer section start -->
    <div class="footer_section layout_padding">
        <div class="container">
            <div class="footer_logo"><a href="/css/template/index.html"><img src="/css/template/images/footer-logo.png"></a></div>
            <div class="footer_menu">
                <ul>
                    <li><a href="/Users/Index">Home</a></li>
                    <li><a href="/Users/About">About</a></li>
                    <li><a href="/Users/Blogs">Latest Post</a></li>
                    <li><a href="/Users/RegistRation">Registration</a></li>
                </ul>
            </div>
            <div class="contact_menu">
                <ul>
                    <li><a href="/css/template/#"><img src="/css/template/images/call-icon.png"></a></li>
                    <li><a href="/css/template/#">Call : +01 1234567890</a></li>
                    <li><a href="/css/template/blog.html"><img src="/css/template/images/mail-icon.png"></a></li>
                    <li><a href="/css/template/features.html">demo@gmail.com</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- footer section end -->
    <!-- copyright section start -->
    <div class="copyright_section">
        <div class="container">
            <p class="copyright_text">Copyright 2020 All Right Reserved By.<a href="/css/template/https://html.design"> Free  html Templates</a></p>
        </div>
    </div>
    <!-- copyright section end -->
    <!-- Javascript files-->
    <script src="/css/template/js/jquery.min.js"></script>
    <script src="/css/template/js/popper.min.js"></script>
    <script src="/css/template/js/bootstrap.bundle.min.js"></script>
    <script src="/css/template/js/jquery-3.0.0.min.js"></script>
    <script src="/css/template/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="/css/template/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="/css/template/js/custom.js"></script>
    <!-- javascript -->
    <script src="/css/template/js/owl.carousel.js"></script>
    <script src="/css/template/https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>

   

    @RenderSection("Scripts", required: false)
</body>
</html>

